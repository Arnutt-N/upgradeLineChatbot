# Environment Variables Template for Vercel Deployment
# Copy this to .env.production and fill in your actual values

# ====================
# Database Configuration (Supabase)
# ====================
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[PROJECT-ID].supabase.co:5432/postgres?sslmode=require
DB_TYPE=postgresql

# ====================
# Application Settings
# ====================
ENVIRONMENT=production
APP_TITLE=LINE Chatbot Admin System
APP_VERSION=2.9.4
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32

# ====================
# LINE Bot Configuration
# ====================
LINE_CHANNEL_SECRET=your_line_channel_secret_here
LINE_CHANNEL_ACCESS_TOKEN=your_line_channel_access_token_here

# ====================
# Google Gemini AI
# ====================
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-pro
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=1000

# ====================
# Telegram Bot (Optional)
# ====================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ====================
# CORS Settings
# ====================
# Update with your Vercel domain after deployment
CORS_ORIGINS=["https://your-app.vercel.app"]

# ====================
# Timezone
# ====================
TZ=Asia/Bangkok

# ====================
# Session Settings
# ====================
SESSION_EXPIRE_MINUTES=43200

# ====================
# File Upload Settings
# ====================
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=["image/jpeg", "image/png", "image/gif", "application/pdf"]
