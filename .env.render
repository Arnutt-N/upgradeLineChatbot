# Production Environment Variables for Render.com
# Copy these values to Render Dashboard > Environment Variables

# Application Settings
ENVIRONMENT=production
HOST=0.0.0.0
PORT=10000
RELOAD=false
DEBUG=false

# Database (SQLite for free tier)
DATABASE_URL=sqlite:///./chatbot.db

# LINE Bot Configuration (⚠️ SET THESE IN RENDER DASHBOARD)
# Get these from LINE Developers Console: https://developers.line.biz/
LINE_CHANNEL_SECRET=your_line_channel_secret_here
LINE_CHANNEL_ACCESS_TOKEN=your_line_channel_access_token_here

# Optional: Telegram Integration
# Create bot via @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Application Performance Settings
NOTIFICATION_QUEUE_SIZE=100
HISTORY_RETENTION_DAYS=90
ANALYTICS_UPDATE_INTERVAL=300

# Security (Render will auto-generate SECRET_KEY)
# SECRET_KEY=auto_generated_by_render

# Form Admin Settings
FORM_ADMIN_SESSION_TIMEOUT=28800
FORM_ADMIN_MAX_SESSIONS=100

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
