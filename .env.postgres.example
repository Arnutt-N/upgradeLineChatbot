# PostgreSQL Environment Variables Example
# Copy this to .env and fill in your actual values

# Database Configuration (Supabase)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[PROJECT-ID].supabase.co:5432/postgres?sslmode=require
DB_TYPE=postgresql

# LINE Bot Configuration
LINE_CHANNEL_SECRET=your_line_channel_secret_here
LINE_CHANNEL_ACCESS_TOKEN=your_line_channel_access_token_here

# Google Gemini AI
GEMINI_API_KEY=your_gemini_api_key_here

# Telegram Bot (Optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Application Settings
ENVIRONMENT=production
APP_TITLE=LINE Chatbot Admin System
APP_VERSION=2.9.4
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32

# Timezone
TZ=Asia/Bangkok

# Development/Debug (set to False in production)
DEBUG=False

# CORS Settings (for production, specify your domain)
CORS_ORIGINS=["https://your-domain.onrender.com"]

# Session Settings
SESSION_EXPIRE_MINUTES=43200  # 30 days

# File Upload Settings
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=["image/jpeg", "image/png", "image/gif", "application/pdf"]
